# TaskLine Environment Configuration
# Copy this file to .env and update the values

# Project
PROJECT_NAME=TaskLine

# Security - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production

# Database Engine: "sqlite" for local, "postgresql" for production
DB_ENGINE=sqlite
SQLITE_DATABASE_NAME=taskline.db

# PostgreSQL settings (only used when DB_ENGINE=postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your-password-here

# Supabase REST API (used by supabase-py client)
# Get these from: Supabase Dashboard > Project Settings > API
# SUPABASE_URL=https://your-project-ref.supabase.co
# SUPABASE_KEY=your-anon-or-service-role-key

# First superuser account (created on first run)
FIRST_SUPERUSER_EMAIL=admin@taskline.com
FIRST_SUPERUSER_PASSWORD=changethis

# Frontend URL (for CORS)
FRONTEND_HOST=http://localhost:3000

# Environment
ENVIRONMENT=local
